#%RAML 1.0 Library
usage: Input Data for RTF Calculator
types:

  Error:
    displayName: Error Response
    description: This is the error response that is sent to the consumer
    type: object
    properties: 
      success:
        description: Success Indicator
        type: boolean
        required: false
      apiName: 
        description: API Name
        type: string
        required: false
      version: 
        description: API Version
        type: string
        required: false
      correlationId:
        description: Cross Reference ID
        type: string
        required: false
      timestamp: 
        description: Timestamp
        type: string
        required: false
      errorDetails: 
        description: Error Details Object
        type: object
        required: false
        properties:
          httpResponseCode: 
            description: HTTP Response Code
            type: string
            required: false
          message:
            description: Error Message
            type: string
            required: false
          shortDescription: 
            description: Short Description
            type: string
            required: false
          description: 
            description: Long Description
            type: string
            required: false
          additionalInfo:
            description: Additional Details
            type: string
            required: false

  inputObject:
    displayName: RTF Calculator Object
    description: Input to RTF Core Calculator
    type: object
    properties:
      masterOrgId:
        displayName: Master Organization ID
        description: This is the parent organization ID. You may or may not have sub orgs or business groups
        type: string
        required: true
      includeSubOrgs:
        displayName: Include Sub Orgs
        description: Includes sub orgs in the RTF core count calculation
        type: boolean
        required: true
      filterEmptyOrg:
        displayName: Filter Empty Org
        description: Remove results from empty Orgs
        type: boolean
        required: true 
      includeCloudHub:
        displayName: Include CloudHub
        description: Include CloudHub vCores in the results
        type: boolean
        required: true
      environments:
        displayName: Environment Type
        description: Do you want to get core counts for Sandbox, Production or All Enviornments?
        type: string
        enum: ["sandbox", "production", "all"]
        required: true
      consolidatedReport:
        displayName: Consolidated Report
        description: Export to a consolidated report in CSV format
        type: boolean              
        required: false